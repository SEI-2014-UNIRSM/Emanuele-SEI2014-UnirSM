 textSize(50);
 text(letter, mouseX, mouseY);
 }
 }
 
 void mouseMoved() {
 // background(0);
 textSize(50);
 text(letter, mouseX, mouseY);
 }
 */


// cambia la lettera premuta
void keyReleased() {
  if (key != CODED && (int)key > 32) letter = str(key);
}
