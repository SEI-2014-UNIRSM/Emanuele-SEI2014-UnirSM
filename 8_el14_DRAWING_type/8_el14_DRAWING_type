// scrivere un testo scegliendo liberamente le lettere da tastiera

// Non riesco a far in modo che la lettera selezionata sia visibile su schermo come puntatore 



PFont font;
String letter = "A";

int oldMouseX =0;
int oldMouseY=0;

void setup() {
  size(800, 800);
  background(0);
  fill(255);

  font = createFont("Helvetica", 12);
  textFont(font);
  textAlign(CENTER, CENTER);
}

void draw() {

  if (mousePressed) {
    textSize(random(70));
    text(letter, mouseX, mouseY);
    oldMouseX=mouseX;
    oldMouseY=mouseY;
  }

// cancellare la schermata con DELETE
// non funziona attualmente

  if (keyPressed) {
    if (keyCode == DELETE) {
      background(0);
    }
  }
  
}
/*
  else {
